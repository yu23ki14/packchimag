.col-12.col-center.month-title.bg-img-cover.p-y-30[style="background-image:url(#{@month.month_picture.photo.url(:medium)})"]
  .absolute-container.backdrop.gray
  .page-container.p-y-20
    .row
      h1.col-12.text-contrast #{@month.title}
      p.col-8.text-contrast #{@month.subtitle}
      
.page-container.row-space-top-4
  .row
    p.pankuzu.col-12
      span
        = link_to root_path
          | Top 
        | > 
        = link_to months_path
          | Lineup 
        | > 
        | #{@month.month}月号
  .row-space-top-4
    .row
      - @articles.each do |a|
        = link_to "/articles/#{a.id}"
          .col-md-4.col-6.row-space-4
            .border-around.article-card.required-container
              .image.bg-img-cover[style="background-image:url(#{asset_path "photos/1.jpg"})"]
              .p-x-5
                h3 #{a.title.truncate(20)}
                p #{a.subtitle.truncate(60)}
              .edited-date.absolute-container
                p #{a.created_at.strftime("%Y年%m月%d日")}